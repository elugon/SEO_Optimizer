# SEO Analysis Configuration
# Copy this file to .env and adjust values as needed

# Request Timeouts (milliseconds)
SEO_DEFAULT_TIMEOUT_MS=10000
SEO_FETCH_TIMEOUT_MS=8000
SEO_ANALYSIS_TIMEOUT_MS=30000

# Analysis Limits
SEO_MAX_INTERNAL_URLS=99
SEO_MAX_PAGE_SIZE_MB=5
SEO_MAX_CONCURRENT_ANALYSES=10

# SEO Thresholds
SEO_TITLE_MIN_LENGTH=30
SEO_TITLE_MAX_LENGTH=60
SEO_DESCRIPTION_MIN_LENGTH=120
SEO_DESCRIPTION_MAX_LENGTH=160

# Performance Settings
SEO_ENABLE_PARALLEL_ANALYSIS=true
SEO_ENABLE_DETAILED_LOGGING=false

# API Configuration
SEO_API_BASE_PATH=/api
SEO_MAX_RETRIES=3
SEO_RETRY_DELAY_MS=1000

# Development Settings
SEO_DEV_MODE=false
NODE_ENV=production