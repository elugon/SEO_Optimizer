<script>
  // Filter functionality for recommendations
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-group button');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active state
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        const selectedCategory = button.getAttribute('data-category');
        
        // Wait a bit for recommendations to be loaded
        setTimeout(() => {
          const categorySections = document.querySelectorAll('.category-section');
          const typeSections = document.querySelectorAll('.type-section');
          
          if (selectedCategory === 'all') {
            // Show all sections
            categorySections.forEach(section => {
              (section as HTMLElement).style.display = '';
            });
            typeSections.forEach(section => {
              (section as HTMLElement).style.display = '';
            });
          } else {
            // Hide all category sections first
            categorySections.forEach(section => {
              (section as HTMLElement).style.display = 'none';
            });
            
            // Show only matching category sections
            categorySections.forEach(section => {
              const categorySection = section as HTMLElement;
              if (categorySection.getAttribute('data-category') === selectedCategory) {
                categorySection.style.display = '';
              }
            });
            
            // Hide type sections that have no visible category sections
            typeSections.forEach(typeSection => {
              const section = typeSection as HTMLElement;
              const visibleCategories = section.querySelectorAll('.category-section[style=""]');
              if (visibleCategories.length === 0) {
                section.style.display = 'none';
              } else {
                section.style.display = '';
              }
            });
          }
        }, 100);
      });
    });
  });
  
  // Update progress ring animation
  window.updateProgressRing = (score) => {
    const progressRing = document.querySelector('.progress-ring') as HTMLElement | null;
    if (progressRing) {
      // Calculate the stroke-dashoffset based on score (0-100)
      const circumference = 226; // 2 * œÄ * 36 (radius)
      const offset = circumference - (score / 100) * circumference;
      
      // Update stroke color based on score
      let colorClass = 'text-red-500';
      if (score >= 80) {
        colorClass = 'text-green-500';
      } else if (score >= 60) {
        colorClass = 'text-yellow-500';
      }
      
      // Remove previous color classes
      progressRing.classList.remove('text-red-500', 'text-yellow-500', 'text-green-500', 'text-brand-primary');
      progressRing.classList.add(colorClass);
      
      // Animate the progress ring
      setTimeout(() => {
        progressRing.style.strokeDashoffset = offset.toString();
      }, 100);
    }
  };
</script>